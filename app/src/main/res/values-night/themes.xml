<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme inherits from the base (already dark) -->
    <style name="Base.Theme.Wallpapers" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorOnPrimary">@color/accent_on_primary</item>
        <item name="colorSecondary">@color/accent_secondary</item>

        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorSurfaceVariant">@color/dark_surface_variant</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/dark_background</item>

        <item name="actionBarStyle">@style/Widget.Wallpapers.ActionBar</item>
    </style>

    <!-- Splash screen theme: no action bar, fullscreen -->
    <style name="Theme.Wallpapers.Splash" parent="Base.Theme.Wallpapers">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>