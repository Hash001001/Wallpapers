<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Night theme - Vibrant dark with colorful accents -->
    <style name="Base.Theme.Wallpapers" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/night_accent_primary</item>
        <item name="colorOnPrimary">@color/night_background</item>
        <item name="colorSecondary">@color/night_accent_secondary</item>

        <item name="android:colorBackground">@color/night_background</item>
        <item name="colorSurface">@color/night_surface</item>
        <item name="colorSurfaceVariant">@color/night_surface_variant</item>
        <item name="colorOnSurface">@color/night_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/night_text_secondary</item>

        <item name="android:statusBarColor">@color/night_status_bar</item>
        <item name="android:navigationBarColor">@color/night_background</item>

        <item name="actionBarStyle">@style/Widget.Wallpapers.ActionBar</item>
    </style>

    <!-- Splash screen theme: no action bar, fullscreen -->
    <style name="Theme.Wallpapers.Splash" parent="Base.Theme.Wallpapers">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>